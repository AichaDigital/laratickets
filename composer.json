{
    "name": "aichadigital/laratickets",
    "description": "Laravel package for support tickets",
    "keywords": [
        "Aicha Digital",
        "laravel",
        "laratickets"
    ],
    "homepage": "https://github.com/aichadigital/laratickets",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Abdelkarim Mateos Sanchez",
            "email": "abdelkarim.mateos@castris.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^12.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "nunomaduro/phpinsights": "^2.13",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "AichaDigital\\Laratickets\\": "src/",
            "AichaDigital\\Laratickets\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AichaDigital\\Laratickets\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "lint": "vendor/bin/pint",
        "test": "vendor/bin/pest",
        "test:unit": "vendor/bin/pest --testsuite=Unit",
        "test:feature": "vendor/bin/pest --testsuite=Feature",
        "test:coverage": "vendor/bin/pest --coverage",
        "test:coverage-html": "vendor/bin/pest --coverage --coverage-html=build/coverage",
        "phpstan": "vendor/bin/phpstan analyse --ansi",
        "phpstan:baseline": "vendor/bin/phpstan analyse --ansi --generate-baseline",
        "insights": "vendor/bin/phpinsights --ansi",
        "insights:fix": "vendor/bin/phpinsights --ansi --fix",
        "check": [
            "@lint",
            "@phpstan",
            "@test"
        ],
        "check:all": [
            "@lint",
            "@phpstan",
            "@insights",
            "@test:coverage"
        ],
        "format": "@lint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AichaDigital\\Laratickets\\LaraticketsServiceProvider"
            ],
            "aliases": {
                "Laratickets": "AichaDigital\\Laratickets\\Facades\\Laratickets"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
